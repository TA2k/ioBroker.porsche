{
  "i18n": true,
  "type": "panel",
  "items": {
    "_header": {
      "type": "header",
      "text": "Porsche Connect Settings",
      "size": 2
    },
    "username": {
      "type": "text",
      "label": "App Email",
      "sm": 12,
      "md": 6
    },
    "password": {
      "type": "password",
      "label": "App Password",
      "sm": 12,
      "md": 6
    },
    "interval": {
      "type": "number",
      "label": "Update interval in minutes",
      "min": 1,
      "sm": 12,
      "md": 4
    },
    "_divider": {
      "type": "divider"
    },
    "_captchaHeader": {
      "type": "header",
      "text": "Captcha Login",
      "size": 3
    },
    "_captchaInfo": {
      "type": "staticText",
      "text": "1. Click 'Start Login' to begin authentication. 2. If a captcha appears, enter the code. 3. Click 'Submit Captcha' to complete login.",
      "sm": 12
    },
    "_startLogin": {
      "type": "sendTo",
      "label": "Start Login",
      "command": "startLogin",
      "variant": "contained",
      "color": "primary",
      "sm": 12,
      "md": 4
    },
    "_captchaStatus": {
      "type": "textSendTo",
      "command": "getCaptchaText",
      "sm": 12,
      "label": "Status"
    },
    "_captchaImage": {
      "type": "imageSendTo",
      "command": "getCaptcha",
      "sm": 12
    },
    "captchaCode": {
      "type": "text",
      "label": "Captcha Code",
      "sm": 12,
      "md": 6
    },
    "_submitCaptcha": {
      "type": "sendTo",
      "label": "Submit Captcha",
      "command": "submitCaptcha",
      "variant": "contained",
      "data": {
        "captchaCode": "${data.captchaCode}"
      },
      "sm": 12,
      "md": 4
    }
  }
}
